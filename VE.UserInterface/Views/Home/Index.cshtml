@{
    ViewBag.Title = "Home Page";
}

<main>
    @{
        var TestUser2 = ViewBag.TestUser2;
    }

    @if (TestUser2 != null)
    {
        <span>@ViewBag.TestUser</span> <span>@ViewBag.TestDept</span>
        <hr />
        <p>Name: @TestUser2.Title</p>
        <p>Email: @TestUser2.Email</p>
        <p>ID: @TestUser2.UserId</p>
        <p>Username: @TestUser2.UserName</p>

        <form method="post" action="@Url.Action("SubmitForm", "Home")">
            @Html.AntiForgeryToken()

            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" required />

            <button type="submit">Submit</button>
        </form>
    }
    @if (ViewBag.SubmitResult != null)
    {
        <p>@ViewBag.SubmitResult</p>
    }
</main>
