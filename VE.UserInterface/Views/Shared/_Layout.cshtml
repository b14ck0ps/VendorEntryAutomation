<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Berger - Vendor Approval Automation</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar p-0">
        <div class="container">
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <div class="navbar-header">
                    <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand">
                        <img style="width:25px" src="@Url.Content("~/Content/Image/bergerlogo.png")" alt="Logo" />
                        Vendor Approval Automation
                    </a>
                </div>
                <span class="nav navbar-text navbar-right">Hello, @(ViewBag.LoginUser.Email ?? User.Identity.Name)</span>
            </div>
        </div>
    </nav>
    <hr />
    <div class="container body-content mb-5">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>